.blogroll {
  width: 25%;
  background: #f8f6f6;
  border: 1px solid #ececec;
  border-radius: 6px;
  padding: 10px 10px 10px 30px;
  margin: 10px;
  display: flex;
  float: left;
  transition-duration: 0.5s, 0.5s;
  transition-property: width, background;
	+mobile() {
		width: 80%;
	}  
