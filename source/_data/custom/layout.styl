/****************************************/
/*************Header begin***************/
/****************************************/
/* 圆角 */
.header-inner, ///顶部圆角
.sidebar-inner { //侧边头像圆角
  border-radius: $myradius;
}

.site-brand-container {
  border-radius: $myradius $myradius 0 0;

  +mobile() {
    border-radius: 0 0 $myradius $myradius;
  }
}
/****************************************/
/*************Header end*****************/
/****************************************/

/****************************************/
/*************Sidebar begin**************/
/****************************************/
/* sidebar-二级菜单圆角 */
.sub-menu {
  border-radius: $myradius !important;
}

/* sidebar-标题背景 */
.site-brand-container {
  background: url(https://cdn.jsdelivr.net/gh/WillCAI2020/cdn/images/header-bg2.jpg);
  background-position: 70% 20%;
  background-size: cover;
  
  +mobile() {
	background: url(https://cdn.jsdelivr.net/gh/WillCAI2020/cdn/images/header-bg1.jpg);
  }
}

/* sidebar-标题 */
.site-title {
  color: #91ffa7;
  font-family: Comic Sans MS;
  font-weight: bold;
}

/* sidebar-副标题 */
.site-subtitle {
  font-weight: bold;
  font-family: "EB Garamond", STKaiti, KaiTi, SimKai, DFKai-SB, "Noto Serif SC";
  color: #edf8f9;
  font-size: 1.2em;
}

/* sidebar-站点描述介绍 */
.site-description {
  color: var(--blockquote-color);
}

/* 取消头像边框 */
.site-author-image{
  border: 0 !important;
}

// 粒子时钟样式
.site-overview {
  text-align: center;
}

canvas#canvas {
  margin-top: 20px;
}
/****************************************/
/*************Sidebar end****************/
/****************************************/


/****************************************/
/*************Post begin*****************/
/****************************************/

// 加密abstract样式
.article_encrypt_abstract {
    text-align: center;
    color: #FFBE3D;
    font-size: 28px;
    -webkit-text-stroke: 1.2px #000000;
}

/*主体圆角*/
/*主体透明度*/
.main-inner {
	border-radius: $myradius;
	margin-bottom: 10px !important;
	background-color: rgba(255, 255, 255, 0.5);
}

/* 修改选中字符的颜色 */
::selection {
  background: rgba(255, 165, 0, 0.5);
  color: #9932CC;
}

//透明度
.post-block{
//	background-color: rgba(255,255,255,0.7) !important;		//透明度不会被继承（多重子元素将看不到底层元素）
	opacity: 0.88;											//会被继承
}

/* post-文章卡片圆角 */
.post,
.post-block,
.post-block+.post-block{
  border-radius: $myradius !important;
}

/*适配mobile*/
@media screen and (min-width: 1200px){
	/*主页文章添加阴影效果*/
	.post {
	   margin-top: 0px;
	   margin-bottom: 60px;
	   padding: 25px 0px;
	   -webkit-box-shadow: 0 0 5px rgba(250, 128, 114, 1.5);
	   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
	}
	
	// 标题
	.post-title {
		color: black;
		letter-spacing: 12px;
		font-family: Comic Sans MS;
		text-shadow: -1px -1px 1px #fff, 1px 1px 1px #000;
	}	
	/* post块 */
	.post-block{
		margin: 0px 36px 24px 36px;
		//margin-bottom: 24px;
		padding: 24px;
		border-radius: 30px 30px 30px 30px;
		box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
	}
	/* 子菜单栏 */
	.sub-menu{
		margin: 0px 36px 0px 36px;
	}
}

/* 顶部空白,适配mobile */

.header, .main-inner {
	margin-top: 10px;

	+mobile() {
		margin-top: 0;
	}
}

/* post-超链接 */
.post-body p a,
.post-body li a{
  color: #4169E1;
  border-bottom: none;
  border-bottom: 1px solid #0593d3;
  &:hover {
    color: #FFD700;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
  }
}

/*置顶字体样式设计*/
#post_top{
	font-weight: bold;
	color: #fb10c8;
}

.post-body h2{
	background: #bb3d00;
	border-radius: 6px;
	border: none;
	border-shadow: 0 0 0 1px #5f5a4b, 1px 1px 6px 1px rgb(10, 10, 0, 0.5);
	color: white;
	font-family: "楷体";
	font-size: 1.23em;
	line-height: 1.4;
	margin: 18px 0px 18px -12px !important;
	padding: 10px;
}
.post-body h3{
	background: #808000;
	border-radius: 6px;
	border: none;
	border-shadow: 0 0 0 1px #5f5a4b, 1px 1px 6px 1px rgb(10, 10, 0, 0.5);
	color: white;
	font-family: "楷体";
	font-size: 1.105em;
	line-height: 1;
	margin: 18px 0 18px 0px !important;
	padding: 10px;
}
code{
	opacity: 1;
	color: #ff3502;
	background-color: #F5DEB3 !important
}

/* post-图片标题 */
.post-body .image-caption {
  margin: 0 auto 15px;
}

/* post-图片阴影 */
.posts-expand .post-body img {
  border-radius: 18px;
  box-shadow: 0 5px 15px 0px rgba(0, 0, 0, .4);
}


/* post-段后距 */
p {
  margin-bottom: 12px;
}

/* post-首页文章信息 */
.index .leancloud_visitors{
  display: none !important;
}

/* 美化 hr 样式 */
hr {
    position: relative;
    margin: 2rem auto;
    width: calc(100% - 4px);
    border: 2px dashed #a4d8fa;
    background: #fff;
}

hr {
    box-sizing: content-box;
    height: 0;
    overflow: visible;
}
