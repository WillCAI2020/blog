  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.blogroll .name {
  font-weight: bold;
  margin: 0.375em 0;
}
.blogroll .excerpt {
  font-size: 0.875em;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  border-top: 1px dashed #ddd;
}
.blogroll .avatar {
  width: 4em !important;
  height: 4em !important;
  margin: 0 1em 0 0 !important;
  z-index: 0;
  box-shadow: inset 0 0 10px #000 !important;
}
