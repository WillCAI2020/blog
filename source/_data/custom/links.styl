.links-content {
  margin: 1em 0px 1em 0px;
}

.link-navigation_dalao::after,
.link-navigation::after{
  content: " ";
  display: block;
  clear: both;
}

.link-navigation_dalao,
.link-navigation{
  display: inline-block;
  width: 100%;
}

.blogroll {
  width: 25%;
  background: #f8f6f6;
  border: 1px solid #ececec;
  border-radius: 6px;
  padding: 10px 10px 10px 30px;
  margin: 10px;
  display: flex;
  float: left;
  transition-duration: 0.5s, 0.5s;
  transition-property: width, background;
	+mobile() {
		width: 80%;
	}  
}
.blogroll:hover {
  width: 25.5%;
  border: 1px solid orange;
  background: #fbe5b9;
  	+mobile() {
		width: 81%;
	}  
}
.blogroll .friend {
  text-decoration: none;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.blogroll .name {
  font-weight: bold;
  margin: 0.375em 0;
}
.blogroll .excerpt {
  font-size: 0.875em;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  border-top: 1px dashed #ddd;
}
.blogroll .avatar {
  width: 4em !important;
  height: 4em !important;
  margin: 0 1em 0 0 !important;
  z-index: 0;
  box-shadow: inset 0 0 10px #000 !important;
}
