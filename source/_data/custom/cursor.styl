//普遍设置
body{
	cursor: url('https://cdn.jsdelivr.net/gh/WillCAI2020/cdn/images/cursor/正常选择.cur'), auto !important;
}
p{
	cursor: url('https://cdn.jsdelivr.net/gh/WillCAI2020/cdn/images/cursor/文本选择.cur'), auto;
}
a{
	cursor: url('https://cdn.jsdelivr.net/gh/WillCAI2020/cdn/images/cursor/链接选择.cur'), auto;
}
button{
	cursor: url('https://cdn.jsdelivr.net/gh/WillCAI2020/cdn/images/cursor/链接选择.cur'), auto !important;
}
