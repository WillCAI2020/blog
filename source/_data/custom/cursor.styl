//fancybox
.fancybox{
	cursor: url("https://cdn.jsdelivr.net/gh/inkss/common@master/cursor/zoom-in.png"), zoom-out;
}
.fancybox-container .fancybox-stage {
  cursor: url("https://cdn.jsdelivr.net/gh/inkss/common@master/cursor/zoom-out.png"), zoom-out;
}

.fancybox-button{
	cursor: url('https://cdn.jsdelivr.net/gh/WillCAI2020/cdn/images/cursor/链接选择.cur'), auto !important;
}



