.app-refresh {
    background: #ac6969;
	border-radius: 12px;
    height: 0;
    line-height: 3em;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 0 1em;
    transition: all .3s ease;
}
.app-refresh-wrap {
	font-weight: bold;
	font-family: "微软雅黑"
    display: flex;
    color: #fff;
}
.app-refresh-wrap label {
    flex: 1;
}
.app-refresh-show {
    height: 3em;
}