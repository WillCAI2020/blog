/*主体圆角*/
/*主体透明度*/
.main-inner {
	border-radius: $myradius;
	background-color: rgba(255, 255, 255, 0);
}

/* 修改选中字符的颜色 */
::selection {
  background: rgba(255, 165, 0, 0.9);
  color: #9932CC;
}

/* post-文章卡片圆角 */
.post,
.post-block,
.post-block+.post-block{
  border-radius: $myradius !important;
}

/*适配mobile*/
@media screen and (min-width: 1200px){
	/*主页文章添加阴影效果*/
	.post {
	   margin-top: 0px;
	   margin-bottom: 60px;
	   padding: 25px 0px;
	   -webkit-box-shadow: 0 0 5px rgba(250, 128, 114, 1.5);
	   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
	}
	
	// 标题
	.post-title {
		color: black;
		letter-spacing: 12px;
		font-family: Comic Sans MS;
		text-shadow: -1px -1px 1px #fff, 1px 1px 1px #000;
	}	
	/* post块 */
	.post-block{
		opacity: 0.95;		/*透明度*/
		margin: 0px 36px 24px 36px;
		//margin-bottom: 24px;
		padding: 24px;
		border-radius: 30px 30px 30px 30px;
		box-shadow: 8px 7px 2px 0 rgba(0,0,0,0.12), 7px 4px 1px -2px rgba(0,0,0,0.06), 0 1px 5px 0 rgba(0,0,0,0.12);
	}
	/* 子菜单栏 */
	.sub-menu{
		margin: 0px 36px 0px 36px;
	}
}

/* 顶部空白,适配mobile */

.header, .main-inner {
	margin-top: 10px;

	+mobile() {
		margin-top: 0;
	}
}

/* post-超链接 */
.post-body p a,
.post-body li a{
  color: #4169E1;
  border-bottom: none;
  border-bottom: 1px solid #0593d3;
  &:hover {
    color: #FFD700;
    border-bottom: none;
    border-bottom: 1px solid #fc6423;
  }
}

/*置顶字体样式设计*/
#post_top{
	font-weight: bold;
	color: #fb10c8;
}